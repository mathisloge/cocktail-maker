{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 31,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "common",
            "hidden": true,
            "binaryDir": "${sourceDir}/build",
            "generator": "Ninja",
            "installDir": "${sourceDir}/dist",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "Python3_FIND_VIRTUALENV": "FIRST",
                "Python3_EXECUTABLE": "${sourceDir}/venv",
                "BUILD_SHARED_LIBS": "ON"
            }
        },
        {
            "name": "vcpkg",
            "hidden": true,
            "toolchainFile": "$penv{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "VCPKG_OVERLAY_PORTS": "${sourceDir}/cmake/overlays",
                "CPM_USE_LOCAL_PACKAGES": true
            }
        },
        {
            "name": "debug-build",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "QT_QML_GENERATE_QMLLS_INI": true
            }
        },
        {
            "name": "release-build",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "developer",
            "displayName": "Developer",
            "inherits": [
                "common",
                "debug-build",
                "vcpkg"
            ],
            "cacheVariables": {
                "BUILD_TESTING": true,
                "CMAKE_SKIP_INSTALL_RULES": true,
                "SANITIZE_ADDRESS": true,
                "SANITIZE_UNDEFINED": true
            }
        },
        {
            "name": "production",
            "displayName": "Production build",
            "inherits": [
                "common",
                "vcpkg",
                "release-build"
            ],
            "cacheVariables": {
                "BUILD_TESTING": false,
                "CMAKE_SKIP_INSTALL_RULES": false
            }
        }
    ],
    "buildPresets": [
        {
            "name": "developer",
            "configurePreset": "developer"
        },
        {
            "name": "production",
            "configurePreset": "production"
        }
    ],
    "testPresets": [
        {
            "name": "developer",
            "configurePreset": "developer",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "ignore",
                "stopOnFailure": true
            }
        }
    ],
    "packagePresets": [
        {
            "name": "production",
            "configurePreset": "production",
            "generators": [
                "DEB"
            ]
        }
    ],
    "workflowPresets": [
        {
            "name": "production",
            "steps": [
                {
                    "type": "configure",
                    "name": "production"
                },
                {
                    "type": "build",
                    "name": "production"
                },
                {
                    "type": "package",
                    "name": "production"
                }
            ]
        }
    ]
}
